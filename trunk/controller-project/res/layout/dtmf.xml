<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ToggleButton
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="73dp"
        android:onClick="forward"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forward"
        android:layout_alignBottom="@+id/forward"
        android:layout_marginLeft="63dp"
        android:layout_toRightOf="@+id/forward"
        android:onClick="reverse"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/c_clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forward"
        android:layout_below="@+id/forward"
        android:layout_marginTop="50dp"
        android:onClick="c_clockwise"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/c_clockwise"
        android:layout_alignBottom="@+id/c_clockwise"
        android:layout_alignLeft="@+id/reverse"
        android:onClick="clockwise"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/pointTurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/c_clockwise"
        android:layout_below="@+id/c_clockwise"
        android:layout_marginTop="56dp"
        android:onClick="pointTurnLeft"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/pointTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pointTurnLeft"
        android:layout_alignBottom="@+id/pointTurnLeft"
        android:layout_alignLeft="@+id/clockwise"
        android:onClick="pointTurnRight"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reverse"
        android:layout_alignLeft="@+id/forward"
        android:layout_marginBottom="13dp"
        android:text="Forward"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/reverse"
        android:text="Reverse"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clockwise"
        android:layout_alignLeft="@+id/c_clockwise"
        android:layout_marginBottom="11dp"
        android:text="C_Cockwise"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/clockwise"
        android:text="Clockwise"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pointTurnRight"
        android:layout_alignRight="@+id/pointTurnLeft"
        android:layout_marginBottom="14dp"
        android:text="PT-L"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/pointTurnRight"
        android:text="PT-R"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pointTurnLeft"
        android:layout_below="@+id/pointTurnLeft"
        android:layout_marginTop="28dp"
        android:text="stop" />

    <ToggleButton
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/reverse"
        android:onClick="stopBot"
        android:text="ToggleButton" />

</RelativeLayout>