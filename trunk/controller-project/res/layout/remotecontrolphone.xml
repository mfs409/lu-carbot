<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivRemoteControlPhoneLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/turnleft" />

        <ImageView
            android:id="@+id/ivRemoteControlPhoneForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/up" />

        <ImageView
            android:id="@+id/ivRemoteControlPhoneRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/turnright" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivRemoteControlPhoneRotNeg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/rotneg" />

        <ImageView
            android:id="@+id/ivRemoteControlPhoneStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/ivRemoteControlPhoneRotPos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/rotpos" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivRemoteControlPhonePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/ivRemoteControlPhoneReverse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickImage"
            android:src="@drawable/down" />
    </TableRow>

    <ImageView
        android:id="@+id/ivRemoteControlPhoneImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</TableLayout>
</RelativeLayout>